{
  "name": "unity-catalog",
  "version": "0.1.0",
  "description": "A personal bibliographic catalog.",
  "main": "server/app.ts",
  "scripts": {
    "app": "tsc ./server/app.ts",
    "build": "ng build",
    "data-source": "tsc server/database/data-source.ts",
    "dev": "tsc --project server/tsconfig.dev.json && concurrently -k \"npm run dev-server\" \"npm run dev-client\"",
    "dev-client": "cd ./client/angular && ng serve",
    "dev-server": "tsc --watch --project server/tsconfig.dev.json",
    "migrate": "typeorm schema:log && typeorm schema:sync && typeorm migration:run",
    "ng": "cd ./client/angular ng",
    "prettier": "prettier -w .",
    "start": "cd ./client/angular ts-node src/index.ts",
    "test": "cd ./client/angular ng test",
    "typeorm": "typeorm-ts-node-commonjs",
    "watch": "ng build --watch --configuration development"
  },
  "private": true,
  "license": "GPL-2.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/D29F4/unity-catalog.git"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "helmet": "^5.1.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.6",
    "typeorm-naming-strategies": "^4.1.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.13",
    "@types/jasmine": "~4.0.0",
    "@types/node": "^18.0.0",
    "concurrently": "^7.2.2",
    "prettier": "^2.7.1",
    "typescript": "~4.7.2"
  }
}
