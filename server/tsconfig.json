{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist",
    "paths": {
      "^controller/*": ["./controller/*"],
      "^database/*": ["./database/*"],
      "^entity/*": ["./database/entity/*"],
